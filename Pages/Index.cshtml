@page
@model IndexModel
@{
    ViewData["Title"] = "rok_przestepny";
}

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.search.year"></label>
            <input asp-for="@Model.search.year" class="form-control" value="" min="1899" max="2022" required/>
            <span asp-validation-for="@Model.search.year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.search.name"></label>
            <input asp-for="@Model.search.name" class="form-control" maxlength="100" value="" optional/>
            <span asp-validation-for="@Model.search.name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
    </form>
</div>

@if (ViewData["message"] != null)
{
    <div class="mt-3">
        <p>@ViewData["message"]</p>
    </div>
}

@{
    <p>@Model.search.year</p>
}

